{
  "name": "heartopia-wiki",
  "version": "2.2.0",
  "description": "ðŸŽ® Heartopia Wiki - Plateforme complÃ¨te de gestion de wiki pour le jeu Heartopia",
  "main": "index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "vite",
    "dev:backend": "cd backend && npm run dev",
    "build": "vite build",
    "preview": "vite preview",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "vite preview --port 5173 --host 0.0.0.0",
    "start:backend": "cd backend && npm start",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "rimraf dist build coverage .nyc_output",
    "clean:deps": "rimraf node_modules backend/node_modules",
    "postinstall": "cd backend && npm install"
  },
  "keywords": [
    "wiki",
    "heartopia",
    "gaming",
    "documentation",
